    ViewData["Title"] = "Ozgecmis Yukleme";
    Layout = "_LayoutUser";
}

<h1 class="text-center">Özgeçmiş Yükleme</h1>

<hr />
<form asp-controller="User" asp-action="Application" method="post" enctype="multipart/form-data">

