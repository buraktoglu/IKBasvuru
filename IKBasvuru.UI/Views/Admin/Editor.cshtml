@model Agreement

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h3 class="text-center">KVKK Metin İşlemleri</h3>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="Editor" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group text-center">
                <label asp-for="Text" class="control-label">Metni düzenleyiniz</label>
                <textarea id="editorid" asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    <script src="~/ckeditor5-build-classic/ckeditor.js"> </script>
    <script>
        ClassicEditor
            .create( document.querySelector( '#editorid' ) )
            .catch( error => { console.error( error );
        } );
    </script>
    }