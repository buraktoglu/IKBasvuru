@model JobPosition

@{
    ViewData["Title"] = "AddPosition";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Listeye eleman eklemek istediğinize emin misiniz?</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-controller="Admin" asp-action="AddPosition" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklaması</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yeni Oluştur" class="btn btn-primary" />
                <a asp-area="Admin" asp-controller="Admin" asp-action="ListPositions" class="btn btn-primary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    }
